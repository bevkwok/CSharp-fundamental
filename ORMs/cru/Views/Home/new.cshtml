@model Dishes
@using cru.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div>
        <h1>Add a new Dish!</h1>
    </div>
    <div>
        <a href="/">Home</a>
    </div>
    <div>
        <form asp-action="NewDish" asp-controller="Home" method="POST">
        <div>
            <span asp-validation-for="Chef"></span>
            <label asp-for="Chef"></label>
            <input asp-for="Chef">
            <span asp-validation-for="Name"></span>
            <label asp-for="Name"></label>
            <input asp-for="Name">
            <span asp-validation-for="Calories"></span>
            <label asp-for="Calories"></label>
            <input asp-for="Calories">
        </div>
        <div>
            <span asp-validation-for="Tastiness"></span>
            <label asp-for="Tastiness"></label>
            <select asp-for="Tastiness" name="Tastiness" id="">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
        <div>
            <span asp-validation-for="Description"></span>
            <label asp-for="Description"></label>
            <input asp-for="Description">
            <input value="Add Dish" type="submit">
        </div>
        </form>
    </div>
</body>
</html>