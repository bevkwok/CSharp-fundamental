@using form_submission.Models
@model form_submission.Models.User
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form</title>
</head>
<body>
    <div>
        <h1>Form Submission</h1>
    </div>
    <div>
        <form asp-action="Submit" asp-controller="Home" method="POST">
            <span asp-validation-for="FirstName"></span>
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName">
            <span asp-validation-for="LastName"></span>
            <label asp-for="LastName">Last Name:</label>
            <input asp-for="LastName">
            <span asp-validation-for="Age"></span>
            <label asp-for="Age">Age:</label>
            <input asp-for="Age">
            <span asp-validation-for="Email"></span>
            <label asp-for="Email">Email:</label>
            <input asp-for="Email">
            <span asp-validation-for="Password"></span>
            <label asp-for="Password">Passward:</label>
            <input asp-for="Password">
            <label asp-for="Confirm_Password">Confirm Passward:</label>
            <input asp-for="Confirm_Password">
            <input value="Add User" type="submit">
        </form>
    </div>
</body>
</html>
